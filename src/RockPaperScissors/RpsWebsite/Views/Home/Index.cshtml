@{
    ViewBag.Title = "Rock/Paper/Scissors";
}
<div class="text-center">
    <div class="jumbotron">
        <p>Let's play Rock Paper Scissors with strangers!</p>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="btn-group-vertical">
            <a class="btn btn-default btn-lg" asp-controller="Play" asp-action="Index">Play!</a>
        </div>
    }
    else
    {

        <div class="btn-group-vertical">
            <a class="btn btn-default btn-lg" asp-controller="Account" asp-action="Login">Log In</a>
            <a class="btn btn-default btn-lg" asp-controller="Account" asp-action="Register">Register</a>
        </div>
    }
</div>